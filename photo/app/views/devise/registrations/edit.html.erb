
<div class="row">
  <div class="container">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group header-background">
     <div class="header-user">
       <button type="button" class="btn" style="margin-top: 170px">Change avatar</button>
     </div>
    </div>

    <div class="col-md-9 border-bottom">
      <h3 class="boder-bottom">Posts</h3>
      
      <div class="post border-bottom">
        <h4 class="border-bottom"> Review Japan</h4>
        <div class="bg"></div>
      </div>
      
      <div class="post border-bottom">
        <h4 class="border-bottom"> Review Japan</h4>
        <div class="bg"></div>
      </div>
      
      <div class="post border-bottom">
        <h4 class="border-bottom"> Review Japan</h4>
        <div class="bg"></div>
      </div>
    </div>
    
    <div class="col-md-3">
      <h3>Info</h3>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email,class:'form-control', autofocus: true %>
      </div>
      <br/>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name,class:'form-control' , autofocus: true %>
      </div>
      <br/>
      
        <h3>Change Your Password</h3>
      <div class="field">
        <%= f.label :current_password %><br />
        <%= f.password_field :current_password,class:'form-control', autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :Change_password %><br />
        <%= f.password_field :password,class:'form-control', autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation,class:'form-control', autocomplete: "off" %>
      </div>
      <br/>
      
      <div class="actions">
        <%= f.submit "Update", class:'btn btn-primary' %>
        <%= button_to " Delete account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class:"btn btn-danger", method: :delete %>
        
      </div>
    </div>
    
    <% end %>
  </div>

</div>

